<div uk-scrollspy="cls: uk-animation-slide-right">

    <!-- Home -->
    <div class="top-section">
        <a href="/" >{{i18n "Main Page"}}</a>
    </div>

    <!-- Header -->
    <h2>{{i18n "Skills"}}</h2>

    {{#arrSkiDetail}}
    <!-- Accordion -->
    <div class="section">
        <h3>{{this.name}}</h3>
        <ul uk-accordion="">

            <!-- Template -->
            {{#each this.examples}}
            <li>
                <a class="uk-accordion-title" href="#"><i class="{{this.icon}}"></i>&nbsp;&nbsp;&nbsp;{{this.name}}</a>
                <div class="uk-accordion-content uk-grid">
                    <div class="uk-width-5-6@l uk-width-3-4@s uk-width-2-3">
                        <p>{{this.description}}</p>
                        <p><a href="{{this.link}}">See project</a></p>
                    </div>
                    <div class="uk-width-1-6@l uk-width-1-4@s uk-width-1-3">
                        <img src="./images/skills/{{this.photo}}.png">
                    </div>
                    
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    {{/arrSkiDetail}}

</div>
<br><br>